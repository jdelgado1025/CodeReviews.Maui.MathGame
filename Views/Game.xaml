<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathGame.Maui.Views.Game">
    
    <VerticalStackLayout Spacing="20" Padding="30">
        <Label 
            Text="{Binding GameType}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="40" />

        <VerticalStackLayout x:Name="QuestionArea" Spacing="20" Padding="30">
            <Label
                x:Name="QuestionLabel"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                FontSize="32"
                Margin="25"/>

            <Entry
                x:Name="AnswerEntry"
                HorizontalOptions="Center"
                WidthRequest="60" />

            <Button
                x:Name="SubmitAnswer"
                Text="Answer"
                Clicked="OnAnswerSubmitted"
                HorizontalOptions="Center"/>

            <Label
                x:Name="AnswerLabel"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                FontSize="32" />
        </VerticalStackLayout>

        <Grid RowSpacing="20" ColumnSpacing="30">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label
                x:Name="QuestionNumberLabel"
                Grid.Column="0"
                HorizontalOptions="Start"
                Text="Question 1"
                FontSize="24"/>

            <Label
                x:Name="ScoreLabel"
                Grid.Column="1"
                HorizontalOptions="End"
                Text="Score: 0 / 0"
                FontSize="24"/>
        </Grid>

        <Label
            x:Name="GameOverLabel"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="30"/>

    </VerticalStackLayout>
</ContentPage>